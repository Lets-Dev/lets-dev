= form_for([:admin, financial_movement]) do |f|
  - if financial_movement.errors.any?
    #error_explanation
      %h2
        = pluralize(financial_movement.errors.count, "error")
        prohibited this financial_movement from being saved:
      %ul
        - financial_movement.errors.full_messages.each do |message|
          %li= message
  .field
    = f.label :amount
    = f.text_field :amount
  .field
    = f.label :description
    = f.text_area :description
  .actions
    = f.submit
