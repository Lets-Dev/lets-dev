%p#notice= notice
%h1 Contacts
%table
  %thead
    %tr
      %th Name
      %th Description
      %th{:colspan => "3"}
  %tbody
    - @contacts.each do |contact|
      %tr
        %td= contact.name
        %td= contact.description
        %td= link_to 'Show', contact
        %td= link_to 'Edit', edit_admin_contact_path(contact)
        %td= link_to 'Destroy', contact, method: :delete, data: { confirm: 'Are you sure?' }
%br/
= link_to 'New Contact', new_admin_contact_path
