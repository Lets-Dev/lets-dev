= form_for([:admin, language_set]) do |f|
  - if language_set.errors.any?
    #error_explanation
      %h2
        = pluralize(language_set.errors.count, "error")
        prohibited this language_set from being saved:
      %ul
        - language_set.errors.full_messages.each do |message|
          %li= message
  .field
    = f.label :name
    = f.text_field :name
  .actions
    = f.submit
