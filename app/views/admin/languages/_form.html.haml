= form_for([:admin, language]) do |f|
  - if language.errors.any?
    #error_explanation
      %h2
        = pluralize(language.errors.count, "error")
        prohibited this language from being saved:
      %ul
        - language.errors.full_messages.each do |message|
          %li= message
  .field
    = f.label :name
    = f.text_field :name
  .field
    = f.label :description
    = f.text_area :description
  .field
    = f.label :documentation_url
    = f.text_field :documentation_url
  .actions
    = f.submit
