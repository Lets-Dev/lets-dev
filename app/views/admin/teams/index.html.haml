%p#notice= notice
%h1 Teams
%table
  %thead
    %tr
      %th Name
      %th Description
      %th{:colspan => "3"}
  %tbody
    - @teams.each do |team|
      %tr
        %td= team.name
        %td= team.description
        %td= link_to 'Show', team
        %td= link_to 'Edit', edit_admin_team_path(team)
        %td= link_to 'Destroy', team, method: :delete, data: { confirm: 'Are you sure?' }
%br/
= link_to 'New Team', new_admin_team_path
