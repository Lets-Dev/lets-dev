- content_for :navigation do
  Mon profil
- content_for :page_title do
  Mon profil - Let's Dev !
#me
  .columns
    = render partial: 'shared/manager/me/side_navigation'
    .column.container
      %h2
        Mettre à jour mes informations
      = form_for @user, url: {action: :update} do |f|
        .columns
          .column
            = f.text_field     :username,               placeholder: "Nom d'utilisateur",            autocomplete: :off, value: @user.username
          .column
            = f.text_field     :email,                  placeholder: 'Adresse e-mail',       autocomplete: :off, value: @user.email
          .column
            %button.gradient-button{type: :submit}
              Mettre à jour
      %h2
        Mettre à jour mon avatar
      = form_for @user, url: {action: :update_avatar} do |f|
        .columns
          .column.is-one-third
            = f.file_field :avatar, as: :file
          .column
            %button.gradient-button{type: :submit}
              Mettre à jour
