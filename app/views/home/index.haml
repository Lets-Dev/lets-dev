= render partial: 'shared/header'

.main-content
  = image_tag('logo_light.svg')
  %h3
    Apprenez à développer en
    %br
    .home-language
    en 3 étapes

  .steps
    .step
      .mdi.mdi-account-multiple-plus
      Crée ton équipe
    .step
      .mdi.mdi-code-braces
      Participe aux challenges
    .step
      .mdi.mdi-trophy-variant
      Gagne des prix

  .engage
    = link_to 'Commencer maintenant', user_signed_in? ? manager_dashboard_index_path : new_user_registration_path

#languages
  - @languages.each do |l|
    %p= l.name

= javascript_include_tag 'typed'
= javascript_include_tag 'home'
